<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <a class="nav-link" href="#">Olá, @User.Identity.Name</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-action="LogoutAdm" asp-controller="Account">Logout</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-action="Register" asp-controller="Account">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-action="LoginAdm" asp-controller="Account">Login</a>
        </li>
    }
</ul>