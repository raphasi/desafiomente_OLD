@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "ROLES";
}

<h1 class="bg-info text-white">Gerenciar roles</h1>
<br />

<a asp-action="Create" class="btn btn-success">Criar Role</a>

<br />
<table class="table table-hover">

    <tr class="table-primary"><th>ID</th><th>Nome</th></tr>
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Id</td>
            <td>@role.Name</td>
            <td i-role="@role.Id"></td>
            <td>
                <form asp-action="Update" asp-route-id="@role.Id" method="get">
                    <button type="submit" class="btn btn-sm btn-primary">
                        Editar Roles
                    </button>
                </form>
            </td>
            <td>
                <form asp-action="Delete" asp-route-id="@role.Id" method="get">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Deletar
                    </button>
                </form>
            </td>
        </tr>
    }
</table>