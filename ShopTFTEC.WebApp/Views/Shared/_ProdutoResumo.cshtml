@model ProductViewModel

<div class="col-sm-4 col-md-4 col-lg-4">
    <p><img src="/images/@Model.ImageURL" class="img-fluid" asp-append-version="true"></p>
    <h3>Preço : @Model.Price.ToString("c")</h3>

    <h4>
        <a asp-controller="Home" asp-action="ProductDetails"
           asp-route-id="@Model.Id">@Model.Name</a>
    </h4>

    <p>@Model.Description</p>
    <div>
        <p class="button">
            <a class="btn btn-primary" id="cartButton" asp-controller="Home"
               asp-action="ProductDetails" asp-route-id="@Model.Id">
                Incluir no Carrinho
            </a>
        </p>
    </div>

</div>