<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        <ul class="nav-item">
            <form method="post" asp-controller="account" asp-action="logout">
                <button type="submit" style="width:auto"
                        class="nav-link btn btn-link py-0">
                    Logout @User.Identity.Name
                </button>
            </form>
        </ul>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-route-returnUrl="@string.Format("{0}{1}",Context.Request.Path, Context.Request.QueryString)" asp-action="Login" asp-controller="Account">Login</a>
        </li>
    }
</ul>