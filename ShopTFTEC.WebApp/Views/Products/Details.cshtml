@model ProductViewModel

<div class="container">
    <div class="row">
        <div class="card">
            <div class="text-center">
                <img src="/images/@Model.ImageURL" class="img-fluid" asp-append-version="true" alt="Produto">
            </div>
            <div class="card-block">
                <h2 class="card-title">@Model.Name</h2>
                <p class="card-text"><h5>@Model.Description</h5></p>
                <p class="btn btn-group align-content-lg-end">
                    <a asp-controller="Products" asp-action="List" class="btn btn-outline-info">Ver todos os Produtos</a>
                    <a class="btn btn-primary" id="cartButton" asp-controller="Cart" asp-action="Index">
                        Adicionar @Model.Name ao carrinho
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>