@model IEnumerable<CategoryViewModel>

@{
    ViewData["Title"] = "Categoria";
}

<h1>Categorias</h1>

<div class="row">
    <div class="col-md-12">
        <div>
            <div class="pull-left">
                <a asp-action="Create" class="btn btn-secondary">
                    <span title="Criar" class="fas fa-plus"></span> Nova Categoria
                </a>
            </div>
        </div>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-warning">
                        <span class="fas fa-edit"></span> Editar Categoria
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-danger">
                        <span class="fas fa-trash-alt"></span>Deletar Categoria
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
